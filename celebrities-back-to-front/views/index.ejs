<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/static/style.css">
  <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js" integrity="sha384-SlE991lGASHoBfWbelyBPLsUlwY1GwNDJo3jSJO04KZ33K2bwfV9YBauFfnzvynJ" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <title>Celebrities | Home</title>
</head>
<body>
  <div id="wrapper">
    <h1>forbes celebrity list 2018</h1>
    <div id="interactive">
      <label id="add-label" class="labels" for="add-menu-toggle"><i class="fas fa-plus"></i></label>
      <input type="checkbox" id="add-menu-toggle">
      <label id="edit-label" class="labels"><i onclick="toggleEditMenu()" class="fas fa-edit"></i></label>
      <input type="checkbox" id="edit-menu-toggle">
      <div class="cart-interactive" id="add-menu">
        <h2>add new item</h2>
        <label class="close-labels" for="add-menu-toggle"><i class="fas fa-times"></i></label>
        <div class="row">
          <label for="a-name">name</label>
          <input id="a-name" type="text">
        </div>
        <div class="row">
          <label for="a-image_url">image url</label>
          <input id="a-image_url" type="text">
        </div>
        <div class="row">
          <label for="a-description">description</label>
          <textarea  id="a-description" name="" cols="30" rows="5"></textarea>
        </div>
        <div class="notification" id="add-notification"></div>
        <div class="row">
          <button class="interactive-btn" id="add-btn">add</button>
          <button class="rs-btn" id="add-rs-btn">clear</button>
        </div>
        
      </div>
      <div class="cart-interactive" id="edit-menu">
        <h2>edit item</h2>
        <label class="close-labels"><i id="edit-close-label" onclick="toggleEditMenu()" class="fas fa-times"></i></label>
        <div class="row">
          <label for=e-id"">id</label>
          <input id="e-id" type="text">
        </div>
        <div class="row">
          <label for="e-name">name</label>
          <input id="e-name" type="text">
        </div>
        <div class="row">
          <label for="e-image_url">image url</label>
          <input id="e-image_url" type="text">
        </div>
        <div class="row">
          <label for="e-description">description</label>
          <textarea  id="e-description" name="" cols="30" rows="5"></textarea>
        </div>
        <div class="notification" id="edit-notification"></div>
        <div class="row">
          <button class="interactive-btn" id="edit-btn">edit</button>
          <button class="rs-btn" id="edit-rs-btn">clear</button>
        </div>
      </div>
    </div>
    
  </div>
  
  <script src="/static/handler/createCard.js"></script>
  <script src="/static/handler/readCard.js"></script>
  <script src="/static/handler/updateCard.js"></script>
  <script src="/static/handler/deleteCard.js"></script>
  <script src="/static/handle.js"></script>
</body>
</html>

